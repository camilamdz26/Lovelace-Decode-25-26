public class LL extends LinearOpMode { //this would create the class called LL

    private Limelight3A limelight; //introduces the limelight camera

    @Override
    public void runOpMode() throws InterruptedException //signifies that something is interupting current processes?
    {
        limelight = hardwareMap.get(Limelight3A.class, "limelight"); //names the camera

        telemetry.setMsTransmissionInterval(11);

        limelight.pipelineSwitch(0);

        /*
         * Starts polling for data.
         */
        limelight.start();
        
        while (opModeIsActive()) {
            LLResult result = limelight.getLatestResult(); //gets latest result
            if (result != null) { //result exists
                if (result.isValid()) {
                    Pose3D botpose = result.getBotpose();
                    telemetry.addData("tx", result.getTx());
                    telemetry.addData("ty", result.getTy());
                    telemetry.addData("Botpose", botpose.toString());
                }
            }
        }
    }
}
